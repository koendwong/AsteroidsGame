class Star extends Floater {
  
  /////////////////////////////////////////////////////////////////////////////////////////////// initialize
  
  public Star() {
    pX = (int)(Math.random()*(width+1));
    pY = (int)(Math.random()*(height+1));
  }
  
  /////////////////////////////////////////////////////////////////////////////////////////////// show
  
  public void show() {
    noStroke();
    fill(255);
    ellipse((float)pX, (float)pY, 1, 1);
  }
  
  /////////////////////////////////////////////////////////////////////////////////////////////// hyperspace
  
  public void hyperspace() {
    pX = (int)(Math.random()*(width+1));
    pY = (int)(Math.random()*(height+1));
  }
  
  /////////////////////////////////////////////////////////////////////////////////////////////// end Star
  
}
