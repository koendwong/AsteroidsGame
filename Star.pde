class Star extends Floater {
  
  ///////////////////////////////////////////////////////////////////////////////////////////////
  
  public Star() {
    pX = Math.random()*1000;
    pY = Math.random()*1000;
  }
  
  ///////////////////////////////////////////////////////////////////////////////////////////////
  
  public void show() {
    noStroke();
    fill(255);
    ellipse((float)pX, (float)pY, 1, 1);
  }
  
  ///////////////////////////////////////////////////////////////////////////////////////////////
  
  public void hyperspace() {
    pX = Math.random()*1000;
    pY = Math.random()*1000;
  }
  
  ///////////////////////////////////////////////////////////////////////////////////////////////
  
}
